<Window x:Class="Aimmy2.MainWindow"
        x:Name="MainAppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Ant="clr-namespace:AntWpf.Controls;assembly=AntWpf"
        xmlns:uilibrary="clr-namespace:Aimmy2.UILibrary"
        xmlns:local="clr-namespace:Aimmy2"
        xmlns:colorpicker="clr-namespace:ColorPicker;assembly=ColorPicker"
        mc:Ignorable="d"
        Title="Aimmy"
        Height="444"
        MinHeight="444"
        Width="670"
        MinWidth="670"
        WindowStyle="None"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <WindowChrome.WindowChrome>
        <WindowChrome ResizeBorderThickness="2"
                      CaptionHeight="0" />
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation
                Storyboard.TargetName="MainAppWindow"
                Storyboard.TargetProperty="Opacity"
                From="0" To="1" Duration="0:0:0.7"/>
        </Storyboard>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Storyboard x:Key="SpinnerAnimation" RepeatBehavior="Forever">
            <DoubleAnimation 
              Storyboard.TargetName="SpinnerTransform"
              Storyboard.TargetProperty="Angle"
              From="0" To="360" Duration="0:0:1" />
        </Storyboard>
        
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation 
            Storyboard.TargetProperty="Opacity"
            From="0"
            To="0.7"
            Duration="0:0:1.25"/>
        </Storyboard>

        <Storyboard x:Key="FadeOutStoryboard">
            <DoubleAnimation 
            Storyboard.TargetProperty="Opacity"
            From="0.7"
            To="0"
            Duration="0:0:1.25"/>
        </Storyboard>

        <Storyboard x:Key="TopBarLogoAnimation" RepeatBehavior="Forever">
            <DoubleAnimation
                Storyboard.TargetName="TopBarLogoViewbox"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                From="0"
                To="360"
                Duration="0:0:10" />
        </Storyboard>
        <Storyboard x:Key="AboutLogoAnimation" RepeatBehavior="Forever">
            <DoubleAnimation
                Storyboard.TargetName="AboutLogoViewbox"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                From="0"
                To="360"
                Duration="0:0:10" />
        </Storyboard>

        <DataTemplate x:Key="ModelTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="0"/>

                <Grid Grid.Column="0"
                  HorizontalAlignment="Right" 
                  VerticalAlignment="Center"
                  Margin="540,0,0,0"     
                  Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">

                    <Border Width="15" Height="15" Background="Transparent" BorderBrush="GhostWhite" BorderThickness="1.5" Opacity="0.7">
                        <Border.RenderTransform>
                            <RotateTransform x:Name="SpinnerTransform" CenterX="7.5" CenterY="7.5"/>
                        </Border.RenderTransform>
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                <BeginStoryboard Storyboard="{StaticResource SpinnerAnimation}"/>
                                <BeginStoryboard Storyboard="{StaticResource FadeInStoryboard}"/>
                            </EventTrigger>

                            <EventTrigger RoutedEvent="FrameworkElement.Unloaded">
                                <BeginStoryboard Storyboard="{StaticResource FadeOutStoryboard}"/>
                            </EventTrigger>
                        </Border.Triggers>
                    </Border>
                </Grid>
            </Grid>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Border x:Name="BackgroundBorder">
            <Border.Background>
                <SolidColorBrush Color="Black"/>
            </Border.Background>
		<Border x:Name="MainBorder"
                CornerRadius="5,5,5,5"
                BorderBrush="Black"
                BorderThickness="1,1,1,1"
                MouseMove="Main_Background_Gradient">
			<Border.Background>
				<LinearGradientBrush EndPoint="0.5,1"
                                     StartPoint="0,0">
					<LinearGradientBrush.RelativeTransform>
						<TransformGroup>
							<ScaleTransform CenterY="0.5"
                                            CenterX="0.5" />
							<SkewTransform CenterX="0.5"
                                           CenterY="0.5" />
							<RotateTransform x:Name="RotaryGradient"
                                             Angle="0"
                                             CenterX="0.5"
                                             CenterY="0.5" />
							<TranslateTransform />
						</TransformGroup>
					</LinearGradientBrush.RelativeTransform>
                    <GradientStop x:Name="BlackGradientStop" Color="Black" Offset="0.27" />
                    <GradientStop x:Name="RadialGradientColorStop" Color="#FFA500" Offset="1" />
				</LinearGradientBrush>
			</Border.Background>
			<Grid>
				<Grid x:Name="Topbar"
                      VerticalAlignment="Top"
                      Height="50">
                    <Viewbox x:Name="TopBarLogoViewbox" Width="25" Height="25" Margin="15,0,0,0" HorizontalAlignment="Left">
                        <Viewbox.RenderTransform>
                            <RotateTransform CenterX="12.5" CenterY="12.5" />
                        </Viewbox.RenderTransform>
                        <Viewbox.Triggers>
                            <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                <BeginStoryboard Storyboard="{StaticResource TopBarLogoAnimation}" />
                            </EventTrigger>
                        </Viewbox.Triggers>
                        <Grid>
                            <Path Stroke="#0072C6" StrokeThickness="15" StrokeStartLineCap="Round" StrokeEndLineCap="Round">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure StartPoint="20,20">
                                            <ArcSegment Size="30,30" Point="80,20" SweepDirection="Clockwise" />
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                            <Path Stroke="#D95319" StrokeThickness="15" StrokeStartLineCap="Round" StrokeEndLineCap="Round" RenderTransformOrigin="50,50">
                                <Path.RenderTransform>
                                    <RotateTransform Angle="90" />
                                </Path.RenderTransform>
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure StartPoint="20,20">
                                            <ArcSegment Size="30,30" Point="80,20" SweepDirection="Clockwise" />
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                            <Path Stroke="#EDB120" StrokeThickness="15" StrokeStartLineCap="Round" StrokeEndLineCap="Round" RenderTransformOrigin="50,50">
                                <Path.RenderTransform>
                                    <RotateTransform Angle="180" />
                                </Path.RenderTransform>
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure StartPoint="20,20">
                                            <ArcSegment Size="30,30" Point="80,20" SweepDirection="Clockwise" />
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                            <Path Stroke="#77AC30" StrokeThickness="15" StrokeStartLineCap="Round" StrokeEndLineCap="Round" RenderTransformOrigin="50,50">
                                <Path.RenderTransform>
                                    <RotateTransform Angle="270" />
                                </Path.RenderTransform>
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure StartPoint="20,20">
                                            <ArcSegment Size="30,30" Point="80,20" SweepDirection="Clockwise" />
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                        </Grid>
                    </Viewbox>
                        <Label x:Name="FantaEngineLabel" Content="Fanta Engine"
                           HorizontalAlignment="Left"
                           Margin="45,0,0,0"
                           VerticalAlignment="Center"
                           Padding="0,0,0,0"
                           FontSize="14"
                               FontFamily="{StaticResource Atkinson Hyperlegible}">
                            <Label.Foreground>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="2,0">
                                    <LinearGradientBrush.Transform>
                                        <TranslateTransform X="0" />
                                    </LinearGradientBrush.Transform>
                                    <GradientStop Color="Red" Offset="0.0" />
                                    <GradientStop Color="Orange" Offset="0.15" />
                                    <GradientStop Color="Yellow" Offset="0.3" />
                                    <GradientStop Color="Green" Offset="0.45" />
                                    <GradientStop Color="Blue" Offset="0.6" />
                                    <GradientStop Color="Indigo" Offset="0.75" />
                                    <GradientStop Color="Violet" Offset="0.9" />
                                    <GradientStop Color="Red" Offset="1.0" />
                                </LinearGradientBrush>
                            </Label.Foreground>
                            <Label.Triggers>
                                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation
                                                Storyboard.TargetProperty="Foreground.Transform.X"
                                                From="0"
                                                To="-1"
                                                Duration="0:0:2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Label.Triggers>
                        </Label>
					<Button x:Name="Exit"
                            Content="&#xE8BB;"
                            HorizontalAlignment="Right"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Foreground="White"
                            FontFamily="Segoe MDL2 Assets"
                            Padding="15,0,15,0"
                            materialDesign:ButtonAssist.CornerRadius="0,5,5,0"
                            BorderThickness="0,0,0,0"
                            FontSize="10"
                            VerticalAlignment="Center"
                            Click="Exit_Click" />
					<Button x:Name="Minimize"
                            Content="&#xE921;"
                            HorizontalAlignment="Right"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Foreground="White"
                            FontFamily="Segoe MDL2 Assets"
                            Padding="15,0,15,0"
                            materialDesign:ButtonAssist.CornerRadius="5,0,0,5"
                            BorderThickness="0,0,0,0"
                            FontSize="10"
                            VerticalAlignment="Center"
                            Click="Minimize_Click"
                            Margin="0,0,40,0" />
				</Grid>
				<Grid x:Name="Sidebar"
                      HorizontalAlignment="Left"
                      Width="50"
                      Margin="0,50,0,0">
					<Grid x:Name="MenuHighlighter"
                          Width="50"
                          Height="50"
                          VerticalAlignment="Top"
                          HorizontalAlignment="Center"
                          ClipToBounds="True">
						<Ellipse Width="25"
                                 Height="25"
                                 Fill="#531dab"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Center"
                                 Margin="-12.5,0,0,0">
							<Ellipse.Effect>
								<BlurEffect Radius="25" />
							</Ellipse.Effect>
						</Ellipse>
						<Ellipse Width="25"
                                 Height="25"
                                 Fill="#531dab"
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Center"
                                 Margin="0,0,-12.5,0">
							<Ellipse.Effect>
								<BlurEffect Radius="25" />
							</Ellipse.Effect>
						</Ellipse>
					</Grid>
					<Ant:Button x:Name="Menu1B"
                                Tag="AimMenu"
                                VerticalAlignment="Top"
                                Height="50"
                                BorderThickness="0"
                                EffectBrush="#FF722ED1"
                                Foreground="#ffffff"
                                BorderBrush="#00D9D9D9"
                                Background="Transparent"
                                FontFamily="Segoe MDL2 Assets"
                                Content="&#xE726;"
                                Padding="0,0,0,0"
                                FontSize="20"
                                HorizontalAlignment="Center"
                                Width="50"
                                Click="MenuSwitch" />
					<Ant:Button x:Name="Menu2B"
                                Tag="ModelMenu"
                                VerticalAlignment="Top"
                                Height="50"
                                BorderThickness="0"
                                EffectBrush="#FF722ED1"
                                Foreground="#ffffff"
                                BorderBrush="#00D9D9D9"
                                Background="Transparent"
                                FontFamily="Segoe MDL2 Assets"
                                Content="&#xE8E5;"
                                Padding="0,0,0,0"
                                FontSize="20"
                                HorizontalAlignment="Center"
                                Width="50"
                                Margin="0,50,0,0"
                                Click="MenuSwitch" />
					<Ant:Button x:Name="Menu3B"
                                Tag="SettingsMenu"
                                VerticalAlignment="Top"
                                Height="50"
                                BorderThickness="0"
                                EffectBrush="#FF722ED1"
                                Foreground="#ffffff"
                                BorderBrush="#00D9D9D9"
                                Background="Transparent"
                                FontFamily="Segoe MDL2 Assets"
                                Content="&#xE713;"
                                Padding="0,0,0,0"
                                FontSize="20"
                                HorizontalAlignment="Center"
                                Width="50"
                                Margin="0,100,0,0"
                                Click="MenuSwitch" />
					<Ant:Button x:Name="Menu4B"
                                    Tag="UIMenu"
                                    VerticalAlignment="Top"
                                    Height="50"
                                    BorderThickness="0"
                                    EffectBrush="#FF722ED1"
                                    Foreground="#ffffff"
                                    BorderBrush="#00D9D9D9"
                                    Background="Transparent"
                                    FontFamily="Segoe MDL2 Assets"
                                    Content="&#xE771;"
                                    Padding="0,0,0,0"
                                    FontSize="20"
                                    HorizontalAlignment="Center"
                                    Width="50"
                                    Margin="0,150,0,0"
                                    Click="MenuSwitch" />
                        <Ant:Button x:Name="Menu5B"
                                Tag="AboutMenu"
                                VerticalAlignment="Top"
                                Height="50"
                                BorderThickness="0"
                                EffectBrush="#FF722ED1"
                                Foreground="#ffffff"
                                BorderBrush="#00D9D9D9"
                                Background="Transparent"
                                FontFamily="Segoe MDL2 Assets"
                                Content="&#xE77B;"
                                Padding="0,0,0,0"
                                FontSize="20"
                                HorizontalAlignment="Center"
                                Width="50"
                                    Margin="0,200,0,0"
                                Click="MenuSwitch" />
				</Grid>
				<ScrollViewer x:Name="AimMenu"
                              Margin="50,50,0,0"
                              VerticalScrollBarVisibility="Auto"
                              PanningMode="VerticalOnly">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition></ColumnDefinition>
							<ColumnDefinition></ColumnDefinition>
						</Grid.ColumnDefinitions>
						<StackPanel x:Name="ASP1"
                                    Grid.Column="0"
                                    Margin="10,0,5,0">
							<StackPanel x:Name="AimAssist" />
							<StackPanel x:Name="TriggerBot" />
							<StackPanel x:Name="AntiRecoil" />
							<StackPanel x:Name="ESPConfig" />
						</StackPanel>
						<StackPanel x:Name="ASP2"
                                    Grid.Column="1"
                                    Margin="5,0,10,0">
							<StackPanel x:Name="AimConfig" />
							<StackPanel x:Name="ARConfig" />
							<StackPanel x:Name="FOVConfig" />
						</StackPanel>
					</Grid>
				</ScrollViewer>
				<ScrollViewer x:Name="ModelMenu"
                              Margin="50,450,0,-400"
                              VerticalScrollBarVisibility="Disabled"
                              PanningMode="VerticalOnly"
                              Visibility="Collapsed">
					<Grid>
						<TabControl HorizontalContentAlignment="Left"
                                    Margin="10,0,10,0">
							<TabItem BorderThickness="0"
                                     Padding="0"
                                     Height="33">
								<TabItem.Header>
									<TextBlock Text="Local Models"
                                               FontSize="11"
                                               Foreground="White"
                                               FontFamily="{StaticResource Atkinson Hyperlegible}" />
								</TabItem.Header>
								<Grid>
									<Border Background="#3F3C3C3C"
                                            BorderBrush="#3FFFFFFF"
                                            BorderThickness="1"
                                            CornerRadius="5,5,0,0"
                                            Margin="0,10,0,54">
										<ListBox x:Name="ModelListBox"
                                                 ItemTemplate="{StaticResource ModelTemplate}"
                                                 Foreground="#DDFFFFFF"
                                                 FontFamily="{StaticResource Atkinson Hyperlegible}"
                                                 Margin="0"
                                                 AllowDrop="True"
                                                 Padding="2">
										</ListBox>
									</Border>
									<Border Background="#3F3C3C3C"
                                            BorderBrush="#3FFFFFFF"
                                            BorderThickness="1"
                                            CornerRadius="0,0,0,5"
                                            Margin="0,0,44,10"
                                            VerticalAlignment="Bottom"
                                            Height="39">
										<Label x:Name="SelectedModelNotifier"
                                               Foreground="#DDFFFFFF"
                                               Content="Loaded Model: N/A"
                                               FontFamily="{StaticResource Atkinson Hyperlegible}"
                                               Padding="10"></Label>
									</Border>
									<Button x:Name="OpenFolderB_ModelWindow"
                                            Background="#3F3C3C3C"
                                            BorderBrush="#3FFFFFFF"
                                            Content="&#xE838;"
                                            HorizontalAlignment="Right"
                                            Height="39"
                                            Width="39"
                                            Margin="0,0,0,10"
                                            VerticalAlignment="Bottom"
                                            Padding="0,0,0,0"
                                            FontFamily="Segoe MDL2 Assets"
                                            BorderThickness="1"
                                            materialDesign:ButtonAssist.CornerRadius="0,0,5,0"
                                            FontSize="13"
                                            Foreground="White"
                                            Click="OpenFolderB_Click"
                                            Tag="models" />
								</Grid>
							</TabItem>
							<TabItem BorderThickness="0"
                                     Padding="0"
                                     Height="33"
                                     Width="75">
								<TabItem.Header>
									<TextBlock Text="Local Configs"
                                               FontSize="11"
                                               Foreground="White"
                                               FontFamily="{StaticResource Atkinson Hyperlegible}" />
								</TabItem.Header>
								<Grid>
									<Border Background="#3F3C3C3C"
                                            BorderBrush="#3FFFFFFF"
                                            BorderThickness="1"
                                            CornerRadius="5,5,0,0"
                                            Margin="0,10,0,54">
										<ListBox x:Name="ConfigsListBox"
                                                 Foreground="#DDFFFFFF"
                                                 FontFamily="{StaticResource Atkinson Hyperlegible}"
                                                 Margin="0"
                                                 Padding="2" />
									</Border>
									<Border Background="#3F3C3C3C"
                                            BorderBrush="#3FFFFFFF"
                                            BorderThickness="1"
                                            CornerRadius="0,0,0,5"
                                            Margin="0,0,44,10"
                                            VerticalAlignment="Bottom"
                                            Height="39">
										<Label x:Name="SelectedConfigNotifier"
                                               Foreground="#DDFFFFFF"
                                               Content="Loaded Config: N/A"
                                               FontFamily="{StaticResource Atkinson Hyperlegible}"
                                               Padding="10"></Label>
									</Border>
									<Button x:Name="OpenFolderB_ConfigWindow"
                                            Background="#3F3C3C3C"
                                            BorderBrush="#3FFFFFFF"
                                            Content="&#xE838;"
                                            HorizontalAlignment="Right"
                                            Height="39"
                                            Width="39"
                                            Margin="0,0,0,10"
                                            VerticalAlignment="Bottom"
                                            Padding="0,0,0,0"
                                            FontFamily="Segoe MDL2 Assets"
                                            BorderThickness="1"
                                            materialDesign:ButtonAssist.CornerRadius="0,0,5,0"
                                            FontSize="13"
                                            Foreground="White"
                                            Click="OpenFolderB_Click"
                                            Tag="configs" />
								</Grid>
							</TabItem>
							<TabItem BorderThickness="0"
                                     Padding="0"
                                     Height="33"
                                     Width="132">
								<TabItem.Header>
									<TextBlock Text="Downloadable Models"
                                               FontSize="11"
                                               Foreground="White"
                                               FontFamily="{StaticResource Atkinson Hyperlegible}" />
								</TabItem.Header>
								<Grid>
									<Label x:Name="LackOfModelsText"
                                           Visibility="Collapsed"
                                           HorizontalContentAlignment="Center"
                                           VerticalContentAlignment="Center"
                                           Content="There is no downloadable models at the moment, please check again later."
                                           Foreground="#DDFFFFFF" />
									<ScrollViewer x:Name="ModelStoreMenu"
                                                  VerticalScrollBarVisibility="Visible"
                                                  PanningMode="VerticalOnly"
                                                  Margin="0,10,0,0">
										<StackPanel>
											<Border Background="#3F3C3C3C"
                                            BorderBrush="#3FFFFFFF"
                                            BorderThickness="1"
                                            CornerRadius="5,5,0,0"
                                            Margin="0,0,5,10"
                                            Height="39">
												<TextBox
                                                    x:Name="SearchBox"
                                                    FontFamily="{StaticResource Atkinson Hyperlegible}"
                                                    Padding="5"
                                                    Foreground="White"
                                                    TextChanged="SearchBox_TextChanged">
												</TextBox>
											</Border>
											<StackPanel x:Name="ModelStoreScroller" />
										</StackPanel>
									</ScrollViewer>
								</Grid>
							</TabItem>
							<TabItem BorderThickness="0"
                                     Padding="10,0,10,0"
                                     Height="33"
                                     Width="132">
								<TabItem.Header>
									<TextBlock Text="Downloadable Configs"
                                               FontSize="11"
                                               Foreground="White"
                                               FontFamily="{StaticResource Atkinson Hyperlegible}" />
								</TabItem.Header>
								<Grid>
									<Label x:Name="LackOfConfigsText"
                                           Visibility="Collapsed"
                                           HorizontalContentAlignment="Center"
                                           VerticalContentAlignment="Center"
                                           Content="There is no downloadable configs at the moment, please check again later."
                                           Foreground="#DDFFFFFF" />
									<ScrollViewer x:Name="ConfigStoreMenu"
                                                  VerticalScrollBarVisibility="Visible"
                                                  PanningMode="VerticalOnly"
                                                  Margin="0,10,0,0">
										<StackPanel>
											<Border Background="#3F3C3C3C"
                                            BorderBrush="#3FFFFFFF"
                                            BorderThickness="1"
                                            CornerRadius="5,5,0,0"
                                            Margin="0,0,5,10"
                                            Height="39">
												<TextBox
                                                    x:Name="CSearchBox"
                                                    FontFamily="{StaticResource Atkinson Hyperlegible}"
                                                    Padding="5"
                                                    Foreground="White"
                                                    TextChanged="CSearchBox_TextChanged">
												</TextBox>
											</Border>
											<StackPanel x:Name="ConfigStoreScroller" />
										</StackPanel>
									</ScrollViewer>
								</Grid>
							</TabItem>
						</TabControl>
					</Grid>
				</ScrollViewer>
				<ScrollViewer x:Name="SettingsMenu"
                              Visibility="Collapsed"
                              Margin="50,450,0,-400"
                              VerticalScrollBarVisibility="Auto"
                              PanningMode="VerticalOnly">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition></ColumnDefinition>
							<ColumnDefinition></ColumnDefinition>
						</Grid.ColumnDefinitions>
						<StackPanel x:Name="SSP1"
                                    Grid.Column="0"
                                    Margin="10,0,5,0">
							<StackPanel x:Name="SettingsConfig" />
						</StackPanel>
						<StackPanel x:Name="SSP2"
                                    Grid.Column="1"
                                    Margin="5,0,10,0">
							<StackPanel x:Name="XYPercentageEnablerMenu" />
						</StackPanel>
					</Grid>
				</ScrollViewer>
                    <ScrollViewer x:Name="UIMenu"
                              Visibility="Collapsed"
                              Margin="50,50,0,0"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto"
                              PanningMode="Both">
                        <StackPanel Margin="10">
                            <!-- Color Pickers -->
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Left">

                                <!-- Background Group -->
                                <StackPanel Margin="0,0,10,20">
                                    <uilibrary:ATitle TitleText="Background" />
                                    <Border Background="#3F3C3C3C"
                                            BorderBrush="#3FFFFFFF"
                                            BorderThickness="1,0,1,0">
                                        <materialDesign:ColorPicker x:Name="ThemeColorPicker"
                                                                    Width="185"
                                                                    Height="185"
                                                                    Margin="5" />
                                    </Border>
                                    <uilibrary:ARectangleBottom />
                                </StackPanel>

                                <!-- Accent Group -->
                                <StackPanel Margin="0,0,10,20">
                                    <uilibrary:ATitle TitleText="Accent" />
                                    <Border Background="#3F3C3C3C"
                                            BorderBrush="#3FFFFFFF"
                                            BorderThickness="1,0,1,0">
                                        <colorpicker:StandardColorPicker x:Name="SecondColorPicker"
                                                                         Width="185"
                                                                         Height="185"
                                                                         Margin="5" />
                                    </Border>
                                    <uilibrary:ARectangleBottom />
                                </StackPanel>

                                <!-- Text Group -->
                                <StackPanel Margin="0,0,0,20">
                                    <uilibrary:ATitle TitleText="Theme Color" />
                                    <Border Background="#3F3C3C3C"
                                            BorderBrush="#3FFFFFFF"
                                            BorderThickness="1,0,1,0">
                                        <colorpicker:StandardColorPicker x:Name="FontColorPicker"
                                                                         Width="185"
                                                                         Height="185"
                                                                         Margin="5" />
                                    </Border>
                                    <uilibrary:ARectangleBottom />
                                </StackPanel>

                            </StackPanel>

                            <!-- Action Buttons -->
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,15,0,0"
